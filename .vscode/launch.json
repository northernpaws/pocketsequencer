    "version": "0.2.0",
    "configurations": [
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "probe-rs Test",
            "cwd": "${workspaceFolder}",
            "connectUnderReset": false,
            "chip": "STM32H743ZITx",
            "wireProtocol": "Swd",
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": true
            },
            "coreConfigs": [
                {
                    "coreIndex": 0,
                    "programBinary": "./firmware/stm32/target/thumbv7em-none-eabihf/debug/app"
                }
            ]
        },
        {
            "name": "BMP Attach",
            "type": "cortex-debug",
            "servertype": "bmp",
            "request": "attach",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "BMP Serial Output",
            "executable": "${workspaceRoot}/firmware/stm32/target/thumbv7em-none-eabihf/debug/app", // replace with your executable
            "interface": "swd",
            "device": "STM32H743",
            "BMPGDBSerialPort": "/dev/cu.usbmodemBEEF9ADE1", // Use whatever serial port makes sense for your OS and BMP setup
            "runToEntryPoint": "main",
            "showDevDebugOutput": "raw",
            // "svdPath": "${command:device-manager.getDevicePack}",
            // "deviceName": "${command:device-manager.getDeviceName}"
            "deviceName": "STM32H743ZI", // uses https://marketplace.visualstudio.com/items?itemName=jeandudey.cortex-debug-dp-stm32h7
        },
        {
            "name": "BMP Debug",
            "type": "cortex-debug",
            "servertype": "bmp",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/firmware/stm32/target/thumbv7em-none-eabihf/debug/app", // replace with your executable
            "preLaunchTask": "BMP Launch", // using stm32-for-vscode extension, this is the build task
            "interface": "swd",
            "device": "STM32H743",
            "BMPGDBSerialPort": "/dev/cu.usbmodemBEEF9ADE1", // Use whatever serial port makes sense for your OS and BMP setup
            "runToEntryPoint": "main", // runToMain is deprecated.
            "showDevDebugOutput": "raw",
            // "svdPath": "${command:device-manager.getDevicePack}", // Keil::STM32H7xx_DFP@4.1.3
            // "deviceName": "${command:device-manager.getDeviceName}", // stm32h743zitx
            "deviceName": "STM32H743ZI", // uses https://marketplace.visualstudio.com/items?itemName=jeandudey.cortex-debug-dp-stm32h7
            // "rttConfig": {
            //     "enabled": true,
            //     "address": "auto",
            //     "clearSearch": false,
            //     "polling_interval": 20,
            //     "rtt_start_retry": 200,
            //     "decoders": [
            //         {
            //             "label": "RTT channel 0",
            //             "port": 0,
            //             "timestamp": true,
            //             "type": "console"
            //         }
            //     ]
            // },
        }
    ]
}